= render 'admin_default'
%div.content.row
  %h1 Speakers#show
  %div.row
    %div.speaker-info.medium-9.column
      %p= @speaker.name
      %p= @speaker.blurb
      =link_to 'Edit', edit_speaker_path
    %div.speaker_avatar.medium-3.column
      = image_tag @speaker.image
      /%image{:src=>"http://placehold.it/200x200"}

  %div.row
    %h1 My Talk
    %section.speaker_talks.medium-9.column
      - @talks.each do |talk|
        %a{:href => "/talks/#{talk.id}/edit"}
          %article.talk
            %h2
              =talk.title
            %h4
              =talk.blurb

      %a{:href => "/talks/speaker/1"}
        %article
          %button#add_talk
            +


      /%button#add_talk Add Talk

  %div.row
    %section.talk_form

